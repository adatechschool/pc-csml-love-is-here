start:
  say Typing(1000)
  say Question(
	title = "Veux tu voir des arbres remarquables ?",
	buttons = [
	  Button("Oui"),
	  Button("Non")
	]
  )
  hold
  if(event == "Oui") {
	say Typing(1000)
	say "C'est parti !"
	goto run
  }else {
	say Typing(1000)
	say "Oh le petit con !"
	goto run
  }
run:
