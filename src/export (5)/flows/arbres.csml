  say "Quelle est ton adresse ?"
  hold
  remember address = event
  if(address.contains_regex("\d+")){//\s[A-z]+\s[A-z]+.+")){
	goto getLocation
  }else {
	say "Adresse invalide !"
  goto run
  }
